{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useGroupedTypeImport": "warn",
				"useAwait": "warn",
				"useImportType": "warn",
				"useExportType": "warn",
				"useConsistentArrayType": "warn"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	}
}
